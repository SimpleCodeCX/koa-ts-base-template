{
  "name": "koa-ts-template",
  "version": "1.0.0",
  "license": "ISC",
  "author": "Simple",
  "description": "koa ts template",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -e ts --exec ts-node -r tsconfig-paths/register src/main.ts",
    "prod": "node -r tsconfig-paths/register ./dist/src/main.js",
    "test": "jest --runInBand",
    "build": "npm run rm-dist && npm run build-ts && npm run copy-static",
    "build-ts": "tsc -b ./  --verbose",
    "rm-dist": "ts-node rm-dist.ts",
    "copy-static": "ts-node copyStatic.ts",
    "lint": "eslint src test --ext .ts",
    "lint:fix": "eslint src test --ext .ts --fix"
  },
  "keywords": [
    "koa",
    "ts"
  ],
  "dependencies": {
    "koa": "^2.8.1",
    "koa-body": "^4.1.1",
    "koa-favicon": "^2.0.1",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static-server": "^1.4.0",
    "koa-views": "^6.2.1",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/koa": "2.0.50",
    "@types/koa-compose": "3.2.4",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.42",
    "@types/koa-views": "^2.0.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "apidoc": "^0.17.7",
    "cross-env": "^6.0.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "jest": "24.1.0",
    "nodemon": "^1.19.3",
    "shelljs": "^0.8.3",
    "should": "^13.2.3",
    "supertest": "^4.0.2",
    "ts-jest": "24.0.0",
    "ts-node": "~7.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~3.4.5"
  }
}